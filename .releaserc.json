{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {"type": "feat", "release": "minor"},
          {"type": "fix", "release": "patch"},
          {"type": "perf", "release": "patch"},
          {"type": "revert", "release": "patch"},
          {"type": "docs", "scope": "README", "release": "patch"},
          {"type": "style", "release": false},
          {"type": "chore", "release": false},
          {"type": "refactor", "release": false},
          {"type": "test", "release": false},
          {"type": "build", "release": false},
          {"type": "ci", "release": false},
          {"breaking": true, "release": "major"},
          {"revert": true, "release": "patch"}
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {"type": "feat", "section": "‚ú® Features", "hidden": false},
            {"type": "fix", "section": "üêõ Bug Fixes", "hidden": false},
            {"type": "perf", "section": "‚ö° Performance", "hidden": false},
            {"type": "revert", "section": "‚è™ Reverts", "hidden": false},
            {"type": "docs", "section": "üìù Documentation", "hidden": false},
            {"type": "style", "section": "üíÑ Styles", "hidden": false},
            {"type": "chore", "section": "üîß Chores", "hidden": false},
            {"type": "refactor", "section": "‚ôªÔ∏è Refactoring", "hidden": false},
            {"type": "test", "section": "‚úÖ Tests", "hidden": false},
            {"type": "build", "section": "üì¶ Build", "hidden": false},
            {"type": "ci", "section": "üë∑ CI", "hidden": false}
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "app/package.json", "app/src-tauri/Cargo.toml", "app/src-tauri/tauri.conf.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {"path": "app/src-tauri/target/release/bundle/**/*.dmg", "label": "macOS DMG"},
          {"path": "app/src-tauri/target/release/bundle/**/*.app", "label": "macOS App"},
          {"path": "app/src-tauri/target/release/bundle/**/*.msi", "label": "Windows MSI"},
          {"path": "app/src-tauri/target/release/bundle/**/*.exe", "label": "Windows EXE"},
          {"path": "app/src-tauri/target/release/bundle/**/*.deb", "label": "Linux DEB"},
          {"path": "app/src-tauri/target/release/bundle/**/*.AppImage", "label": "Linux AppImage"}
        ]
      }
    ]
  ]
}